<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Sooktoring" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#f5f5f5</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TabTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="colorPrimary">#fff</item>                                <!-- 배경 -->
        <item name="fontFamily">@font/spoqahansansneobold</item>
        <item name="android:textSize">20sp</item>

        <item name="android:textColorPrimary">@color/sora</item>       <!-- 탭바 선택된 텍스트 -->
        <item name="android:textColorSecondary">#aaaaaa</item>         <!-- 탭바 텍스트 -->

        <item name="colorAccent">@color/sora</item>                    <!-- 하단 움직이는 바 색-->
    </style>


</resources>