<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginLeft="32dp"
    android:layout_marginRight="45dp"
    android:layout_width="360dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:layout_width="3dp"
            android:layout_height="36dp"
            android:background="@color/sora" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/item_recycle_firstmajor"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="3dp"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="숙명여자대학교 공예과 졸업"/>

            <TextView
                android:id="@+id/item_recycle_secondmajor"
                android:layout_marginLeft="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:textSize="12sp"
                android:text="제 2전공/ 시각영상디자인과"
                android:textColor="@color/grey" />
        </LinearLayout>

        <TextView
            android:id="@+id/item_recycle_admin"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="78dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2014/03\n~ 2018/08"
            android:textColor="@color/grey"/>
    </LinearLayout>

</LinearLayout>