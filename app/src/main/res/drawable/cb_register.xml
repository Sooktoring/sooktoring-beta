<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Unchecked -->
    <item android:state_checked="false">
        <shape>
            <stroke android:color="#c4cbd2" android:width="1dp" />
            <solid android:color="#c4c4c4" />
        </shape>
    </item>
    <!-- Checked -->
    <item android:state_checked="true">
        <layer-list>
            <!-- 배경 -->
            <item>
                <shape>
                    <solid android:color="@color/sora" />
                </shape>
            </item>
            <!-- 이미지 영역 -->
            <item android:drawable="@drawable/vector"
                android:top="4.8dp"
                android:bottom="3.8dp"
                android:left="3dp"
                android:right="3dp"/>
        </layer-list>
    </item>
</selector>